---
import logo from '../assets/DZG_icon.svg'
const { siteTitleHref } = Astro.props;
---

<a href={siteTitleHref} class="site-title sl-flex">
	<img
		alt="DZG logo"
		src={logo.src}
		width={logo.width}
		height={logo.height}
	/>
	<span>
		Data Science Orchestrator
	</span>
</a>

<style>
	.site-title {
		align-items: center;
		gap: var(--sl-nav-gap);
		font-size: var(--sl-text-h4);
		font-weight: 600;
		color: black;
		text-decoration: none;
		white-space: nowrap;
	}
	img {
		height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
		width: auto;
		max-width: 100%;
		object-fit: contain;
		object-position: 0 50%;
	}
</style>
